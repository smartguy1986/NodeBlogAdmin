<%- include("inc/header") %>
<style>
    .img_container {
        width: 100%;
        object-fit: cover;
        object-position: center;
        height: 250px;
    }

    .title_container {
        width: 100%;
        padding: 2%;
        text-align: right;
    }
</style>
<div class="container">
    <div class="container">
        <div style="width: 100%;">
            <div class="img_container">
                <% if (article.featuredimage==null) { %>
                <img src='images/defaultImage.png' style="max-width: 100%;">
                <%} else { %>
                <img src='/uploads/<%= article.featuredimage %>'style="width: 100%; height: 100%; overflow: hidden; object-fit: cover;">
                <% } %>
            </div>
            <div class="title_container">
                <h1 class="mb-1"><%= article.title %></h1>
                <br>
                <p><%- article.description %></p>
            </div>
        </div>
        <div style="clear: both;"></div>
        <br>
        <div class="text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
        </div>
        <br>
        <a href="/articles/" class="btn btn-primary">All Articles</a>
        <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
        <br><br>
        <div>
            <%- article.markdown %>
        </div>
        <br><br>
    </div>
</div>
<%- include("inc/footer") %>