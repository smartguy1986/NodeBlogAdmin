<%- include("inc/header") %>
<div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New Article</a>
    <a href="/admin/logout" class="btn btn-danger">Logout</a>
    <% articles.forEach(article => { %>
    <div class="card mt-4">
        <div class="card-body">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <% if (article.featuredimage==null) { %>
                        <img src='images/defaultImage.png' width="100%">
                        <%} else { %>
                        <img src='/uploads/<%= article.featuredimage %>' width="100%">
                        <% } %>
                    </div>
                    <div class="col">
                        <h4 class="card-title">
                            <%= article.title %>
                        </h4>
                        <br>
                        <div class="card-subtitle text-muted mb-2">
                            Published : <%= article.createdAt.toLocaleDateString() %>
                        </div>
                        <br><br>
                        <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                        <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <div class="col">
                        <div class="card-text mb-2">
                            <%- article.description %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
</div>
<%- include("inc/footer") %>