<%- include("inc/header") %>
<div class="container">
  <h1 class="mb-4">Edit Article</h1>
  <form action="/articles/<%= article.id %>?_method=PUT" method="POST">
    <input type="hidden" name="objectid" value="<%= article.id %>">
    <div class="form-group">
      <label for="title">Title</label>
      <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" id="description" class="form-control summernote"><%= article.description %></textarea>
    </div>
    <div class="form-group">
      <label for="markdown">Markdown</label>
      <textarea name="markdown" id="markdown" class="form-control summernote"><%= article.markdown %></textarea>
    </div>
    <a href="/articles/" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>
<%- include("inc/footer") %>